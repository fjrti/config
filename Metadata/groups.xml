<Groups version='3.0'>
  <Group profile='true' public='true' default='true' name='basic'>
    <Group name='ubuntu-lucid' />
  </Group>
  <Group name='ubuntu-lucid'>
    <Bundle name='ubuntu-lucid' />
    <Group name='ubuntu' />
  </Group>
  <Group name='ubuntu'>
    <Bundle name='root-dotfiles' />
    <Bundle name='hcs-sysadmin' />
  </Group>

  <!-- HCS server groups -->
  <Group name='config-server'>
    <Bundle name='config-server' />
  </Group>
  <Group name='mail-server'>
    <Bundle name='mail-server' />
    <Group name='homedirs' />
  </Group>

  <!-- Utility groups -->
  <Group name='homedirs'> <!-- Use LDAP, automount homedirs, etc. -->
    <Bundle name='hcs-userfacing' />
    <Bundle name='ldap-client' />
    <Bundle name='autofs' />
  </Group>
</Groups>
